<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <!-- Bootstrap 5 -->
    <link rel="shortcut icon" href="/images/hub.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4dae97c793.js" crossorigin="anonymous"></script>
    <style>
        body {
            padding: 20px;
            background-color: #121212; /* Silky black background */
            color: #f1f1f1; /* Light text for contrast */
        }
        header {
            background-color: #007bff;
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        header h1 {
            margin: 0;
        }
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            background-color: #1f1f1f; /* Darker card background */
            color: #f1f1f1;
        }
        .profile-section i {
            font-size: 70px;
            color: #6c757d;
        }
        .logout-link {
            color: white;
            font-weight: bold;
        }
        .logout-link:hover {
            color: #f8d7da;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .table thead {
            background-color: #343a40;
            color: #ffffff;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        /* Responsive Styles */
        @media (max-width: 768px) {
            header {
                font-size: 1.2rem;
            }
            .table-responsive {
                overflow-x: auto;
            }
            .table {
                font-size: 0.85rem;
            }
            h1 {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 576px) {
            body {
                padding: 10px;
            }
            header h1 {
                font-size: 1.2rem;
            }
            .card {
                margin-bottom: 15px;
            }
            .table thead {
                display: none; /* Hide the table headers on small screens */
            }
            .table td {
                display: block;
                text-align: right;
                padding-left: 50%;
                position: relative;
                font-size: 0.85rem;
            }
            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 0;
                width: 45%;
                padding-left: 10px;
                text-align: left;
                font-weight: bold;
                color: #ffffff;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center">
        <h1>Welcome, <%= user.name %>!</h1>
        <a href="/logout" class="logout-link">Logout</a>
    </header>

    <div class="container">
        <div class="row g-4">
            <!-- Profile Card -->
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-user-circle mb-3"></i>
                        <h5 class="card-title"><%= user.name %></h5>
                        <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
                        <p class="card-text"><strong>Phone:</strong> <%= user.phone %></p>
                        <p class="card-text"><strong>Address:</strong> <%= user.address %></p>
                    </div>
                </div>
            </div>

            <!-- Transaction History Card -->
            <div class="col-lg-8 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Transaction History</h5>
                        <% if (payments && payments.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Reference</th>
                                            <th>Status</th>
                                            <th>Method</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-white">
                                        <% payments.forEach(payment => { %>
                                            <tr>
                                                <td class="text-white" data-label="Date"><%= new Date(payment.date).toLocaleDateString() %></td>
                                                <td class="text-white" data-label="Amount"><%= payment.amount %> Naira</td>
                                                <td class="text-white" data-label="Reference"><%= payment.reference %></td>
                                                <td class="text-white" data-label="Status"><%= payment.status %></td>
                                                <td class="text-white" data-label="Method"><%= payment.paymentMethod %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">No transactions found.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Purchased Courses Section -->
        <section class="mt-5">
            <h2 class="mb-4">Your Purchased Courses</h2>
            <div class="row g-4">
                <% if (purchasedCourses && purchasedCourses.length > 0) { %>
                    <% purchasedCourses.forEach(course => { %>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <img src="<%= course.imageUrl || 'default-image.jpg' %>" class="card-img-top" alt="<%= course.name %>" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title"><%= course.name %></h5>
                                    <p class="card-text"><strong>Duration:</strong> <%= course.duration %> weeks</p>
                                    <p class="card-text"><strong>Class Type:</strong> <%= course.classType %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
            <a href="/index" class="btn btn-primary mt-4">Check Available Courses</a>
        </section>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
